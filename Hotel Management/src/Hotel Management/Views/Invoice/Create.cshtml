@model Hotel_Management.Models.Invoice

@{
    ViewData["Title"] = "Create";
}

<h2>Create a new invoice</h2>
<div class="tooltipgill" style="color:red">
    Important!
    <span class="tooltiptextgill">
        Please ensure that all fields have been filled in before pressing create.
    </span>
</div>
<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="DatePrepared" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DatePrepared" id="datepicker1" class="form-control" />
                <span asp-validation-for="DatePrepared" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="GSTRate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="GSTRate" class="form-control" />
                <span asp-validation-for="GSTRate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TotalDue" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TotalDue" class="form-control" />
                <span asp-validation-for="TotalDue" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>

<div>
    <a class="btn btn-default" asp-action="Index">Back to Summary</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />
<script>

    $(function () {
        $("#datepicker1").datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", new Date());
       
    });

</script>
}
