@model IEnumerable<Hotel_Management.Models.Availability>

@{
    ViewData["Title"] = "Index";
}

<h2>Availability Options</h2>

<p>
    <a class="btn btn-default" asp-action="Create">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AvailabilityStatus)
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AvailabilityStatus)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
           
            <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
        </td>
    </tr>
}
</table>
<div>
    <input type="button" value="Print" onclick="window.print()" class="btn btn-default" />
</div>
