@model Hotel_Management.Models.Payment

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Payment</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="CreditCardDetailsID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="CreditCardDetailsID" class ="form-control"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DatePaid" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DatePaid" class="form-control" />
                <span asp-validation-for="DatePaid" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="InvoiceID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="InvoiceID" class ="form-control"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ReceiptNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ReceiptNumber" class="form-control" />
                <span asp-validation-for="ReceiptNumber" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TotalPaid" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TotalPaid" class="form-control" />
                <span asp-validation-for="TotalPaid" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>

<div>
    <a class="btn btn-default" asp-action="Index">Back to Summary</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
