@model IEnumerable<Hotel_Management.Models.ChargeBack>

@{
    ViewData["Title"] = "Index";
}

<h2>Charge Backs</h2>

<p>
    <a class="btn btn-default" asp-action="Create">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ChargeBackLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChargeBackTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerGuest.CustomerFullName)
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ChargeBackLocation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChargeBackTotal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerGuest.CustomerFullName)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
           
            <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
        </td>
    </tr>
}
</table>
