@model IEnumerable<Hotel_Management.Models.Booking>

@{
    ViewData["Title"] = "Index";
}

<h2>Booking</h2>

<p>
    <a class="btn btn-default" asp-action="Create">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BookingMade)
        </th>
        <th>
          Guest Name
        </th>
        <th>
          Checked in
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArrivalDate)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.DepartureDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberofNights)
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BookingMade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerGuest.CustomerFullName)

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CheckInStatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArrivalDate)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.DepartureDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberofNights)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
           
            <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
        </td>
    </tr>
}
</table>
