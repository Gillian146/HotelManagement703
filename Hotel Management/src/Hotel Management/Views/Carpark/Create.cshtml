@model Hotel_Management.Models.Carpark

@{
    ViewData["Title"] = "Create";
    var HotelID = (IEnumerable<SelectListItem>)ViewData["HotelID"];
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Carpark</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="HotelID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="HotelID" asp-items="HotelID" class="form-control"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CarparkLocation" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CarparkLocation" class="form-control" />
                <span asp-validation-for="CarparkLocation" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CarparkName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CarparkName" class="form-control" />
                <span asp-validation-for="CarparkName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CarparkNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CarparkNumber" class="form-control" />
                <span asp-validation-for="CarparkNumber" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>

<div>
    <a class="btn btn-default" asp-action="Index">Back to Summary</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
