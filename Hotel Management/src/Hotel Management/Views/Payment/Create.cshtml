@model Hotel_Management.Models.Payment

@{
    ViewData["Title"] = "Create";
    var CreditCardDetailsID = (IEnumerable<SelectListItem>)ViewData["CreditCardDetailsID"];
    var InvoiceID = (IEnumerable<SelectListItem>)ViewData["InvoiceID"];
}

<h2>Process a new payment</h2>
<div class="tooltipgill" style="color:red">
    Important!
    <span class="tooltiptextgill">
        Please ensure that all fields have been filled in before pressing create.
    </span>
</div>
<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="CreditCardDetailsID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="CreditCardDetailsID" asp-items="CreditCardDetailsID" class ="form-control">
                    <option></option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DatePaid" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DatePaid"  id="datepicker1" class="form-control" />
                <span asp-validation-for="DatePaid" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="InvoiceID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="InvoiceID" asp-items="InvoiceID" class ="form-control"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ReceiptNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ReceiptNumber" class="form-control" />
                <span asp-validation-for="ReceiptNumber" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TotalPaid" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TotalPaid" class="form-control" />
                <span asp-validation-for="TotalPaid" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>

<div>
    <a class="btn btn-default" asp-action="Index">Back to Summary</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />
<script>

    $(function () {
        $("#datepicker1").datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", new Date());
    
    });

</script>


}
