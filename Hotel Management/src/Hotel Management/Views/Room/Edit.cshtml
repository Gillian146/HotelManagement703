@model Hotel_Management.Models.Room

@{
    ViewData["Title"] = "Edit";
    var FloorID = (IEnumerable<SelectListItem>)ViewData["FloorID"];
    var RoomTypeID = (IEnumerable<SelectListItem>)ViewData["RoomTypeID"];
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Room</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <label asp-for="FloorID" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="FloorID" asp-items="FloorID" class="form-control">
                    <option></option>
                </select>
                <span asp-validation-for="FloorID" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="RoomName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="RoomName" class="form-control" />
                <span asp-validation-for="RoomName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="RoomNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="RoomNumber" class="form-control" />
                <span asp-validation-for="RoomNumber" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="RoomRate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="RoomRate" class="form-control" />
                <span asp-validation-for="RoomRate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Room Type</label>
            <div class="col-md-10">
                <select asp-for="RoomTypeID" asp-items="RoomTypeID" class="form-control">
                    <option></option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>

<div>
    <a class="btn btn-default" asp-action="Index">Back to Summary</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
