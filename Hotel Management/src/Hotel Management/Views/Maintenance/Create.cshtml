@model Hotel_Management.Models.Maintenance

@{
    ViewData["Title"] = "Create";
    var StaffID = (IEnumerable<SelectListItem>)ViewData["StaffID"];
    var RoomID = (IEnumerable<SelectListItem>)ViewData["RoomID"];
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Maintenance</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="DateEntered" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DateEntered" type="date" class="form-control" />
                <span asp-validation-for="DateEntered" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="StaffID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="StaffID" asp-items="StaffID" class="form-control">
                    <option></option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="RoomID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="RoomID" asp-items="RoomID" class="form-control">
                    <option></option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MaintenanceName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="MaintenanceName" class="form-control" />
                <span asp-validation-for="MaintenanceName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MaintenanceDescription" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="MaintenanceDescription" class="form-control" />
                <span asp-validation-for="MaintenanceDescription" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="MaintenanceNotes" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="MaintenanceNotes" class="form-control" />
                <span asp-validation-for="MaintenanceNotes" class="text-danger" />
            </div>
        </div>
       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
