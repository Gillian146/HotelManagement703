@model IEnumerable<Hotel_Management.Models.Hotel>

@{
    ViewData["Title"] = "Index";
}

<h2>Tomive Corporation Hotels</h2>

<p>
    <a class="btn btn-default" asp-action="Create">Create New</a>
</p>
<table class="table">
    <tr>
       
        <th>
            @Html.DisplayNameFor(model => model.HotelName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HotelPostalAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HotelStreetAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HotelCity)
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.HotelName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HotelPostalAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HotelStreetAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HotelCity)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
            
            <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
        </td>
    </tr>
}
</table>
