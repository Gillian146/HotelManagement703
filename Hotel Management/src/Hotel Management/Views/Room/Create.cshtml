@model Hotel_Management.Models.Room

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Room</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="FloorID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="FloorID" class ="form-control"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="RoomName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="RoomName" class="form-control" />
                <span asp-validation-for="RoomName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="RoomNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="RoomNumber" class="form-control" />
                <span asp-validation-for="RoomNumber" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="RoomRate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="RoomRate" class="form-control" />
                <span asp-validation-for="RoomRate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
