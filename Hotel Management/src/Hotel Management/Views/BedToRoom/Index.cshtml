@model IEnumerable<Hotel_Management.Models.BedToRoom>

@{
    ViewData["Title"] = "Index";
}

<h2>Bed To Rooms</h2>

<p>
    <a  class="btn btn-default" asp-action="Create">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RoomType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BedType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quanitity)
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RoomType.RoomTypeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BedType.BedTypeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quanitity)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |

            <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
        </td>
    </tr>
}
</table>
